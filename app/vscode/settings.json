{
	"breadcrumbs.symbolSortOrder": "position",

	"chat.disableAIFeatures": true,

	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"editor.autoSurround": "never",
	"editor.fontFamily": "Monaspace Neon",
	"editor.fontLigatures": "'calt','liga','ss01','ss02','ss03','ss04','ss05','ss06','ss07','ss08','ss09','ss10'",
	"editor.fontSize": 13,
	"editor.formatOnPaste": true,
	"editor.guides.bracketPairs": true,
	"editor.insertSpaces": false,
	"editor.quickSuggestions": {
		"comments": "off",
		"other": "off",
		"strings": "off",
	},
	"editor.tabSize": 2,

	"editor.unicodeHighlight.ambiguousCharacters": true,
	"editor.unicodeHighlight.includeComments": true,
	"editor.unicodeHighlight.includeStrings": true,
	"editor.unicodeHighlight.invisibleCharacters": true,
	"editor.unicodeHighlight.nonBasicASCII": true,

	"explorer.decorations.colors": false,
	"explorer.excludeGitIgnore": true,
	"explorer.openEditors.visible": 1,

	"files.exclude": {
		".vscode/": true,
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	"outline.showModules": false,
	"outline.showVariables": false,

	"terminal.integrated.fontFamily": "Monaspace Neon",
	"terminal.integrated.fontSize": 13,

	"workbench.activityBar.location": "top",
	"workbench.colorTheme": "Default Dark Modern",
	"workbench.editor.decorations.colors": false,
	"workbench.editor.empty.hint": "hidden",
	"workbench.editor.pinnedTabsOnSeparateRow": true,
	"workbench.editor.revealIfOpen": true,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.navigationControl.enabled": false,
	"workbench.secondarySideBar.defaultVisibility": "hidden",
	"workbench.startupEditor": "newUntitledFile",
	"workbench.tree.enableStickyScroll": true,


	"css.format.enable": true,
	"css.format.newlineBetweenRules": true,
	"css.format.newlineBetweenSelectors": true,
	"css.format.spaceAroundSelectorSeparator": true,

	"editorconfig.showMenuEntry": false,

	"go.lintOnSave": "package",
	"go.lintTool": "golangci-lint-v2",
	"go.lintFlags": [
		"--enable",
		"copyloopvar,dupword,errname,gci,goconst,godot,gofmt,makezero,unconvert,unparam,whitespace",
	],
	"go.testFlags": [
		"-count", "1",
		"-v",
	],
	"go.vetOnSave": "off",

	"html.autoClosingTags": false,
	"html.autoCreateQuotes": false,
	"html.format.wrapAttributes": "preserve",
	"html.format.wrapLineLength": 0,

	"javascript.format.enable": true,
	"javascript.format.insertSpaceAfterCommaDelimiter": false,
	"javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.format.semicolons": "insert",
	"javascript.preferences.quoteStyle": "single",
	"[javascript]": {
		"editor.formatOnSave": true,
	},

	"json.format.enable": true,
	"json.format.keepLines": true,
	"[json][jsonc]": {
		"editor.formatOnSave": true,
	},

	"markdown.occurrencesHighlight.enabled": true,
	"markdown.validate.enabled": true,
	"markdown.validate.fileLinks.enabled": "error",
	"markdown.validate.fragmentLinks.enabled": "error",

	"python.analysis.typeCheckingMode": "basic",
	"python.languageServer": "Pylance",
	"[python]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": "explicit",
			"source.unusedImports": "explicit",
		},
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.formatOnSave": true,
	},

	"scss.format.enable": true,
	"scss.format.newlineBetweenSelectors": false,
	"scss.format.maxPreserveNewLines": 2,
	"scss.format.spaceAroundSelectorSeparator": true,

	"terraform.mcp.server.enable": false,
	"[terraform][terraform-vars]": {
		"editor.formatOnSave": true,
	},

	"redhat.telemetry.enabled": false,
	"yaml.completion": false,
	"yaml.format.printWidth": 10000,
	"yaml.format.proseWrap": "never",
	"yaml.format.singleQuote": true,
	"yaml.hover": false,
	"yaml.schemaStore.enable": false,
	"[yaml][dockercompose][github-actions-workflow]": {
		"editor.defaultFormatter": "redhat.vscode-yaml",
		"editor.formatOnSave": true,
	},
}
