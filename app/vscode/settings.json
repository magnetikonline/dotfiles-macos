{
	"breadcrumbs.symbolSortOrder": "position",

	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"editor.autoSurround": "never",
	"editor.fontFamily": "JetBrains Mono",
	"editor.fontLigatures": true,
	"editor.fontSize": 13,
	"editor.formatOnPaste": true,
	"editor.guides.bracketPairs": true,
	"editor.insertSpaces": false,
	"editor.quickSuggestions": {
		"comments": false,
		"other": false,
		"strings": false,
	},
	"editor.stickyScroll.enabled": true,
	"editor.tabSize": 2,
	"editor.unicodeHighlight.includeComments": true,

	"explorer.decorations.colors": false,
	"explorer.excludeGitIgnore": true,
	"explorer.openEditors.visible": 0,

	"files.exclude": {
		".vscode/": true,
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	"outline.showModules": false,
	"outline.showVariables": false,

	"terminal.integrated.fontFamily": "JetBrains Mono",
	"terminal.integrated.fontSize": 14,

	"workbench.activityBar.visible": false,
	"workbench.colorTheme": "Monokai",
	"workbench.editor.decorations.colors": false,
	"workbench.editor.revealIfOpen": true,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.startupEditor": "newUntitledFile",


	"css.format.enable": true,
	"css.format.newlineBetweenRules": true,
	"css.format.newlineBetweenSelectors": true,
	"css.format.spaceAroundSelectorSeparator": true,

	"go.buildOnSave": "off",
	"go.lintOnSave": "package",
	"go.lintTool": "golangci-lint",
	"go.lintFlags": [
		"--enable",
		"errname,exportloopref,gci,goconst,gofmt,makezero,unconvert,unparam,whitespace",
	],
	"go.testFlags": [
		"-count","1",
		"-v",
	],
	"go.vetOnSave": "off",

	"html.autoClosingTags": false,

	"javascript.format.enable": true,
	"javascript.format.insertSpaceAfterCommaDelimiter": false,
	"javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.format.semicolons": "insert",
	"javascript.preferences.quoteStyle": "single",

	"markdown.editor.pasteUrlAsFormattedLink.enabled": true,
	"markdown.occurrencesHighlight.enabled": true,
	"markdown.validate.enabled": true,
	"markdown.validate.fileLinks.enabled": "error",
	"markdown.validate.fragmentLinks.enabled": "error",

	"python.analysis.typeCheckingMode": "basic",
	"python.languageServer": "Pylance",

	"[python]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": true,
		},
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.formatOnPaste": false,
	},

	"scss.format.enable": true,
	"scss.format.newlineBetweenRules": true,
	"scss.format.newlineBetweenSelectors": true,
	"scss.format.spaceAroundSelectorSeparator": true,

	"[terraform][terraform-vars]": {
		"editor.formatOnSave": true,
	},

	"redhat.telemetry.enabled": false,
	"yaml.completion": false,
	"yaml.format.singleQuote": true,
	"yaml.hover": false,
	"yaml.schemaStore.enable": false,

	"[yaml]": {
		"editor.formatOnSave": true,
	},
}
