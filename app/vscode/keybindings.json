[
	{
		"key": "cmd+0",
		"command": "workbench.action.zoomReset"
	},
	{
		"key": "alt+cmd+1",
		"command": "workbench.action.editorLayoutSingle"
	},
	{
		"key": "alt+cmd+2",
		"command": "workbench.action.editorLayoutTwoColumns"
	},
	{
		"key": "alt+cmd+3",
		"command": "workbench.action.editorLayoutThreeColumns"
	},
	// Cmd+W when closing tabs will defeat closing the entire window when no more tabs remain
	{
		"key": "cmd+w",
		"command": "-workbench.action.closeWindow",
		"when": "!editorIsOpen && !multipleEditorGroups"
	},
	{
		"key": "alt+cmd+x",
		"command": "workbench.files.action.collapseExplorerFolders"
	},
	{
		"key": "alt+cmd+j",
		"command": "workbench.files.action.showActiveFileInExplorer",
		"when": "editorTextFocus"
	},
	{
		"key": "cmd+=",
		"command": "editor.action.fontZoomIn",
		"when": "editorTextFocus"
	},
	{
		"key": "cmd+-",
		"command": "editor.action.fontZoomOut",
		"when": "editorTextFocus"
	},
	{
		"key": "cmd+0",
		"command": "editor.action.fontZoomReset",
		"when": "editorTextFocus"
	},
	{
		"key": "f5",
		"command": "editor.action.sortLinesAscending",
		"when": "editorTextFocus"
	},
	{
		"key": "cmd+k cmd+l",
		"command": "editor.action.transformToLowercase",
		"when": "editorTextFocus"
	},
	{
		"key": "cmd+k cmd+u",
		"command": "editor.action.transformToUppercase",
		"when": "editorTextFocus"
	},
	{
		"key": "alt+cmd+down",
		"command": "editor.action.revealDefinition",
		"when": "editorTextFocus && editorHasDefinitionProvider && !isInEmbeddedEditor"
	},
	{
		"key": "cmd+r",
		"command": "workbench.action.gotoSymbol",
		"when": "editorTextFocus"
	},
	{
		"key": "shift+cmd+v",
		"command": "workbench.view.scm"
	},
	{
		"key": "cmd+k cmd+0",
		"command": "editor.unfoldAll",
		"when": "editorTextFocus"
	},
	{
		"key": "shift+alt+cmd+[",
		"command": "moveActiveEditor",
		"args": {
			"to": "left"
		},
		"when": "editorTextFocus"
	},
	{
		"key": "shift+alt+cmd+]",
		"command": "moveActiveEditor",
		"args": {
			"to": "right"
		},
		"when": "editorTextFocus"
	}
]
